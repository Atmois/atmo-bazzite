{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "rebaseWhen": "never",
  "packageRules": [
    {
      "matchFileNames": ["Containerfile"],
      "matchDatasources": ["docker"],
      "pinDigests": false
    },
    {
      "automerge": true,
      "matchUpdateTypes": ["pin", "pinDigest"]
    }
  ]
}
